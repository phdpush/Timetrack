<table border="1" style="width:50%" height='100'>
    <tr>
      <td>Project</td>
      <td>User</td>
    </tr>
  <% for project_user in @project_users %>  
    <tr>
      <td><%= project_user.project.project_name%></td>
      <td><%= project_user.user.email%></td>
    </tr>
  <% end %>  
</table>
<br/><br/>
<%= form_for(:project_user, :url => create_assign_project_projects_path) do |f| %>
  <table border="1" style="width:50%" height='100'>
    <tr>
      <td>Project</td>
      <td><%= collection_select :project_user, :project_id, @projects, :id, :project_name, {:prompt => "--Select--"} %></td>
    </tr>
    <tr>
      <td>User</td>
      <td><%= collection_select :project_user, :user_id, @users, :id, :email, {:prompt => "--Select--"} %></td>
    </tr>
  </table>

  <%= f.submit %>


<% end %>